datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  name        String
  password    String
  profilePicture String?  // Foto de perfil (opcional)
  posts       Post[]      // Relacionamento 1:N com Postagem
  interactions Interaction[] // Relacionamento 1:N com Interação
  challenges  Challenge[] @relation("UserChallenges") // Relacionamento N:M com Desafio
  created_challenges Challenge[]
}

model Challenge {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  startDate   DateTime
  endDate     DateTime
  creatorId    Int       // ID do criador do desafio
  creator      User      @relation(fields: [creatorId], references: [id])
  coverPhoto  String?     // Foto de capa (opcional)
  participants User[]     @relation("UserChallenges") // Relacionamento N:M com Usuário
  Post Post[]
}

model Post {
  id          Int       @id @default(autoincrement())
  userId      Int
  challengeId Int
  title       String
  description String
  photo       String?  // Foto da postagem (opcional)
  user        User     @relation(fields: [userId], references: [id])
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  interactions Interaction[] // Relacionamento 1:N com Interação
}

model Interaction {
  id        Int      @id @default(autoincrement())
  postId    Int
  userId    Int
  content   String
  isReaction Boolean
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
